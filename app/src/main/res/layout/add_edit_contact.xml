<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/appbackground">

    <TextView
        android:text="FACULTY CONTACT"
        android:textSize="25dp"
        android:id="@+id/id"
        android:layout_marginBottom="20dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:layout_marginTop="90dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/username"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_below="@+id/id"
        android:layout_width="256dp"
        android:layout_height="41dp"
        android:layout_gravity="center"
        android:layout_marginStart="75dp"
        android:layout_marginTop="15dp"
        android:background="#40ffffff"
        android:hint="Username"
        android:paddingStart="20dp"
        android:paddingTop="10dp" />

    <EditText
        android:id="@+id/email"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_below="@+id/username"
        android:layout_width="256dp"
        android:layout_height="41dp"
        android:layout_gravity="center"
        android:layout_marginStart="75dp"
        android:layout_marginTop="15dp"
        android:background="#40ffffff"
        android:hint="Email"
        android:paddingStart="20dp"
        android:paddingTop="10dp" />

    <EditText
        android:id="@+id/dept"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_below="@+id/email"
        android:layout_width="256dp"
        android:layout_height="41dp"
        android:layout_gravity="center"
        android:layout_marginStart="75dp"
        android:layout_marginTop="15dp"
        android:background="#40ffffff"
        android:hint="Dept"
        android:paddingStart="20dp"
        android:paddingTop="10dp" />
    <EditText
        android:id="@+id/phno"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_below="@+id/dept"
        android:layout_width="256dp"
        android:layout_height="41dp"
        android:layout_gravity="center"
        android:layout_marginStart="75dp"
        android:layout_marginTop="15dp"
        android:background="#40ffffff"
        android:hint="Phone number"
        android:paddingStart="20dp"
        android:paddingTop="10dp" />

    <EditText
        android:id="@+id/alt_phno"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_below="@+id/phno"
        android:layout_width="256dp"
        android:layout_height="41dp"
        android:layout_gravity="center"
        android:layout_marginStart="75dp"
        android:layout_marginTop="15dp"
        android:background="#40ffffff"
        android:hint="Alternate phn no"
        android:paddingStart="20dp"
        android:paddingTop="10dp" />

    <EditText
        android:id="@+id/intercom"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_below="@+id/alt_phno"
        android:layout_width="256dp"
        android:layout_height="41dp"
        android:layout_gravity="center"
        android:layout_marginStart="75dp"
        android:layout_marginTop="15dp"
        android:background="#40ffffff"
        android:hint="Intercom"
        android:paddingStart="20dp"
        android:paddingTop="10dp" />

    <Button
        android:id="@+id/insert"
        android:layout_below="@+id/intercom"
        android:textStyle="bold"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginStart="150dp"
        android:layout_marginTop="55dp"
        android:background="#90ffffff"
        android:text="INSERT" />



</RelativeLayout>

